<%= form_for @kanban do |f| %>
    <%= render 'shared/messages', object: f.object %>
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" align="center">Новая колонка</h4>
            </div>
            <div class="modal-body">
                <table id="kanbans" align="center">
                    <%= f.fields_for :kanban_milestones, @kanban.kanban_milestones.build do |ff| %>
                        <tr>
                            <th> <%= f.label 'Имя:' %> </th>
                            <td> <%= ff.text_field :kms_name %> </td>
                        </tr>
                    <% end %>
                </table>
            </div>
            <div class="modal-footer">
                <div class="row text-center">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Отмена</button>
                    <%= f.submit "Добавить", class: "btn btn-primary btn-sm", name: "add_column" %>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
<% end %>
