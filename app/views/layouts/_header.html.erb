<header class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <div class="navbar-header">
                    <% if signed_in? %>
                        <%= link_to 'Добро пожаловать, ' + current_user.username, user_name_path(current_user.username), id: "logo" %>
                    <% end %>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav pull-right navbar-nav">
                        <li><%= link_to "Домашнаяя страница", root_path %></li>
                        <li><%= link_to "О программе", about_path %></li>
                        <% if signed_in? %>
                            <% if current_user.admin? %>
                                <li><%= link_to "Users", users_path %></li>
                            <% end %>
                            <li id="fat-menu" class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Учетная запись <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><%= link_to "Профиль", user_name_path(current_user.username) %></li>
                                    <% if not current_user.guest? %>
                                        <li><%= link_to "Настройки", user_name_edit_path(current_user.username) %></li>
                                    <% end %>
                                    <li class="divider"></li>
                                    <li>
                                      <%= link_to "Выйти из учетной записи", signout_path, method: "delete" %>
                                    </li>
                                </ul>
                            </li> <!-- closing off id = fat -->
                        <% else %>
                            <li><%= link_to "Авторизоваться", signin_path %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
</header>
